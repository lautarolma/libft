#include "libft.h"
#include <stdio.h>
#include <stdlib.h>

void ft_malloc(int size)
{}

size_t	ft_wstart(char *start, char c)
{
	size_t	i;

	i = 0;
	while (start[i] && start[i] == c)
		i++;
	while (start[i])
	{
		if ((start[i] != c && i == 0) || (start[i] != c && start[i - 1] == c))
			return (i);
		i++;
	}
	return (0);
}

size_t	ft_wlen(char *start, char c)
{
	size_t	len;
	size_t	i;

	len = 0;
	i = 0;
	while (start[i++] != c)
		len++;
	return (len);
}

char	*ft_walocator(char **array, char *start, size_t len, size_t i)
{
	array[i] = ft_substr(start, 0, len + 1);
	if (!array[i])
	{
		while ((int)i >= 0)
		{
			free (array[i]);
			i--;
		}
		free (array);
	}
	i++;
	start += len;
	return (start);
}

char	**ft_split(char const *s, char c)
{
	char		**array;
	char		*start;
	size_t		nwords;
	size_t		i;
	size_t		len;

	if (s == NULL)
		return (NULL);
	nwords = 0;
	i = -1;
	while (s[++i])
		if ((s[i] != c && i == 0) || (s[i] != c && s[i - 1] == c))
			nwords++;
	array = ft_malloc((nwords + 1) * sizeof(char *));
	if (!array)
		return (NULL);
	i = -1;
	start = (char *)s;
	while (++i < nwords)
	{
		start = &start[ft_wstart(start, c)];
		len = ft_wlen(start, c);
		start = ft_walocator(array, start, len, i);
	}
	return (array);
}

int main()
{
	char const	*str = NULL;
	char		c = ' ';
	char	**split = ft_split(str, c);
	size_t	i = 0;

	printf("%s\n", (char *)split);
	/*while (split[i])
	{
		printf("%ld %s\n", i, split[i]);
		i++;
	}*/
	return (0);
}
